pipeline {
    agent any  // Déclare un agent global pour exécuter le pipeline sur n'importe quel nœud disponible

    tools {
        nodejs "nodejs"
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    dir('frontend') {
                        sh 'npm install'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            agent {
                docker {
                    image 'cypress/included:9.7.0'
                    args '-v $CYPRESS_CACHE_FOLDER:/cache/Cypress'
                }
            }
            steps {
                script {
                    dir('frontend') {
                        sh 'npx cypress run'
                    }
                }
            }

            post {
                always {
                    archiveArtifacts artifacts: 'cypress/screenshots/**, cypress/videos/**', allowEmptyArchive: true
                }
                failure {
                    echo 'Cypress tests failed.'
                }
            }
        }
    }
}
