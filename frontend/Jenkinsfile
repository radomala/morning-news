pipeline {
    agent any

    environment {
        SONAR_TOKEN = credentials('your-sonar-token-id') // Remplacez par l'ID de vos credentials Jenkins  
        SONAR_HOST_URL = 'https://sonarcloud.io'
        SONAR_ORGANIZATION = 'radomala' // Votre organisation SonarCloud  
        PROJECT_KEY = 'backend' // Clé de votre projet  
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Clonez votre dépôt depuis Git  
                git branch: 'romeo_news', credentialsId: 'token-git-jenkins', url: 'https://github.com/radomala/morning-news.git' // Remplacez par l'URL de votre dépôt  
            }
        }

        stage('SonarCloud Analysis') {
            steps {
                script {
                    // Exécution de SonarScanner  
                    sh """
                    sonar-scanner \
                      -Dsonar.organization=${SONAR_ORGANIZATION} \
                      -Dsonar.projectKey=${PROJECT_KEY} \
                      -Dsonar.sources=. \
                      -Dsonar.host.url=${SONAR_HOST_URL} \
                      -Dsonar.login=${SONAR_TOKEN}
                    """
                }
            }
        }
    }
}