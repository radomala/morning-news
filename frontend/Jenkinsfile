pipeline {
    agent any  // Utilisation d'un agent global pour exécuter le pipeline

    tools {
        nodejs "nodejs"
        docker "docker"
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    dir('frontend') {
                        sh 'npm install'
                    }
                }
            }
        }

        stage('Run Locust Load Tests') {
            agent {
                docker {
                    image 'locustio/locust'
	            }
            }

            steps {
                script {
                    dir('frontend') {
                        sh 'locust -f locustfile.py --headless -u 10 -r 2 -- run-time 1m -- host=http://localhost'
	        }}}
        }
        /*
        stage('Build Docker Image') {
            agent {
                label 'docker'  // Utilisation d'un label pour spécifier un agent Docker
            }
            steps {
                script {
                    dir('frontend') {
                        sh 'npx cypress run'
                    }
                }
            }

            post {
                always {
                    archiveArtifacts artifacts: 'cypress/screenshots/**, cypress/videos/**', allowEmptyArchive: true
                }
                failure {
                    echo 'Cypress tests failed.'
                }
            }
        } */
    }
}
